    "version": "0.2.0",
    "configurations": [
        {
            "name": "run server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "eui",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        },
        {
            "name": "init-db",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "eui",
                "FLASK_ENV": "development"
            },
            "args": [
                "init-db",
                "--with-test-data"
            ],
            "jinja": true
        }
    ]
}